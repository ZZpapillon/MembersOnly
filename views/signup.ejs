<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Sign Up</title>
  <!-- Bootstrap CSS -->
  <head>
    <!-- Include jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Include Bootstrap JavaScript -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </head>

</head>

<body>
  <div class="container">
    <h1 class="mt-5">Sign Up</h1>
    <form id="signupForm" action="/sign-up" method="POST" class="mt-3">
      <div class="form-group">
        <label for="firstName">First Name</label>
        <input name="firstName" id="firstName" class="form-control" placeholder="First Name" type="text" required>
      </div>
      <div class="form-group">
        <label for="lastName">Last Name</label>
        <input name="lastName" id="lastName" class="form-control" placeholder="Last Name" type="text" required>
      </div>
      <div class="form-group">
        <label for="username">Username</label>
        <input name="username" placeholder="johndoe" type="text" <%=typeof username !=='undefined' ? `value=${username}` : ''
          %> minlength="1" required/>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input name="password" id="password" class="form-control" type="password" required>
      </div>
      <div class="form-group">
        <label for="confirmPassword">Confirm Password</label>
        <input name="confirmPassword" id="confirmPassword" class="form-control" type="password" required>
      </div>
      <button type="submit" class="btn btn-primary">Sign Up</button>
    </form>
  <%if (typeof errors !=='undefined' ) {%>
    <div class="sign-up-errors">
      <% errors.forEach(error=> { %>
        <p>
          <%= error.msg %>
        </p>
        <% }) %>
    </div>
    <% } %>
  
  
  </div>

  <!-- Bootstrap JS (optional) -->
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

 
</body>

</html>

